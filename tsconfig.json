{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "lib": ["es6"],    
    "allowJs": true,                       
    "checkJs": true,                       
    "outDir": "build",                        
    "rootDir": "src",                         
    "removeComments": true, 
    "strict": true,                           
    "esModuleInterop": true,                  
    "resolveJsonModule": true,                
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}
